<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/layout/main.jsp”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/views/layout/main.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/add*" exclude="true" />
    <mapping path="/edit*" exclude="true" />
    <mapping path="/view*" exclude="true" />

</sitemesh>